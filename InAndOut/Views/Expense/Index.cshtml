@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-action="Create">Create New Expense</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Expense Name</th>
                <th scope="col">Amount</th>
            </tr>
        </thead>
        <tbody>
        
            @foreach (var Expense in Model)
            {<tr>
                <td scope="col">@Expense.ExpenseName</td>
                <td scope="col">@Expense.Amount</td>
                <td class="col-6 text-right">
                    <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-route-Id="@Expense.Id" asp-action="Update">Update</a>
                    <a class="btn btn-danger" asp-area="" asp-controller="Expense" asp-route-Id="@Expense.Id" asp-action="Delete">Delete</a>
                </td>
            </tr>
            }
        </tbody>
        </table>
    }

    else
    {
        <p>No Items Created Yet</p>
    }
</div>